 stream
    // Select just the cpu measurement from our example database.
    |from()
        .measurement('cpu')
    |alert()
        .warn(lambda:’TRUE’)
        .crit(lambda: ‘TRUE’)
      // Whenever we get an alert write it to a file.
        .id('{{ [CPU_Used]')
        .log('/tmp/cpu_idle_alerts.log')
